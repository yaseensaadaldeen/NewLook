@model NEWLOOK.Models.NewLook.ServiceType
@{
    ViewData["Title"] = "Add Sub-Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="about section pt-2 pt-md-5" id="SubSer-create">
    <div class="container">
        <h2>Add Sub-Service</h2>
        <hr />
        <div class="signup-border">
            <form asp-action="CreateSubService" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="SerTypeName" class="control-label"></label>
                    <input asp-for="SerTypeName" class="form-control" />
                    <span asp-validation-for="SerTypeName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SerTypeDesc" class="control-label"></label>
                    <textarea asp-for="SerTypeDesc" class="form-control"></textarea>
                    <span asp-validation-for="SerTypeDesc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SerTime" class="control-label"></label>
                    <input asp-for="SerTime" class="form-control" type="number" min="1" step="1" />
                    <span asp-validation-for="SerTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" min="0" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="MstSerId" class="control-label">Master Service</label>
                    <select asp-for="MstSerId" class="form-control" asp-items="@(new SelectList(ViewBag.MasterServices, "Id", "SerName"))">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="MstSerId" class="text-danger"></span>
                </div>

                <!-- Hidden field to set Active = 'Y' -->
                <input type="hidden" asp-for="Active" value="Y" />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
